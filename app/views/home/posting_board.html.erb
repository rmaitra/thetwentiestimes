
<div class = "container" ng-controller="PostsCtrl">

    <div class = "pull-right">
        <b>Search:</b> <input ng-model="searchText">
    </div>
    
    </br>
    </br>
    
    <div class="row">
        <div class="col-sm-6 col-md-6" ng-repeat="post in posts | filter:searchText | orderBy:predicate:reverse">
            <div class="thumbnail">
            <img data-src="holder.js/300x200" alt="...">
            <div class="caption">
                <h3>{{post.title}}</h3>
                <p><a href ="/profile?id={{post.userId}}">{{post.userName}}</a></p>
                <p>{{post.content | cut:true:150:' ...'}}</p>
                <p><button class="btn btn-primary" data-toggle="modal" data-target="#modalPost" ng-click ="viewPost(post)">
                    Read
                </button></p>
            </div>
            </div>
        </div>
    </div>

    
