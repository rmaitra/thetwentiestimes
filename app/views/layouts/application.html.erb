<!DOCTYPE html>
<html ng-app="NextList">
<head>
  <title>Nextlist</title>
  

  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>

  
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
  
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.6/angular.min.js"></script>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.6/angular-resource.min.js"></script>
  
  <%= javascript_include_tag "application" %>
   <script>
    $(document).on('page:load', function() {
      return $('[ng-app]').each(function() {
        var module;
        module = $(this).attr('ng-app');
        return angular.bootstrap(this, [module]);
      });
    });
  </script>
  

  <%= csrf_meta_tags %>
</head>
<body>


    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a id = "navlogo" class="navbar-brand" href=<%= root_path %>><b>Next</b>List</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href=<%= root_path %>>Home</a></li>
            <% if signed_in? %>
            <li><a href=<%= profile_path(current_user.id) %>>Profile</a></li>
            <li><a href=<%= posting_board_path %>>Jobs Board</a></li>
            <li><a href=<%= user_board_path %>>User Board</a></li>
            <% end %>
            <li><a ng-click="changeView()">Contact</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
	    <% if signed_in? %>
	      <% if current_user.admin? %>
	      <li><a href=<%= users_index_path %>>Users</a></li>
	      <li><a href=<%= posts_index_path %>>Posts</a></li>
	      <% end %>
	      <li><%= link_to "Sign Out", signout_path, method: "DELETE" %></li>
	    <% else %>
	      <li><a href=<%= signin_path %>>Sign In</a></li>
	    <% end %>
	  </ul>
        </div>
      </div>
    </div>
    
    <% if signed_in? %>
        <div id = "div-current-user" data-user-id="<%= @current_user.id %>" data-user-name="<%= @current_user.name %>" data-user-email="<%= @current_user.email %>"></div>
    <% end %>
    
    </br>
    </br>
    <div>
        <%= yield %>
    </div>

    

  
</body>
</html>
